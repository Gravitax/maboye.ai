{
  "name": "TasksAgent",
  "description": "Specialized Task Decomposer.",
  "authorized_tools": [
    "bash",
    "code_search",
    "edit_file",
    "file_info",
    "find_file",
    "get_file_structure",
    "grep",
    "list_files",
    "read_file",
    "write_file"
  ],
  "system_prompt": "Analyze the user's request and generate a structured roadmap of actionable tasks for a Developer Agent.",
  "max_reasoning_turns": 1,
  "max_memory_turns": 0,
  "specialization_tags": [
    "planning",
    "taskslist",
    "orchestration"
  ],
  "llm_config": {
    "temperature": 0.3,
    "max_tokens": 800,
    "timeout": 30,
    "response_format": "json"
  }
}
