# AMOKK Backend Configuration

# Server Configuration
HOST=127.0.0.1
PORT=8000
DEBUG=True

# CORS Origins (comma-separated)
# These origins are allowed to make API requests
CORS_ORIGINS=http://localhost:8080,http://localhost:5173,http://localhost:3000,file://

# Default State Values
DEFAULT_REMAINING_GAMES=42
DEFAULT_FIRST_LAUNCH=true
DEFAULT_GAME_TIMER=0
DEFAULT_COACH_ACTIVE=true
DEFAULT_ASSISTANT_ACTIVE=true
DEFAULT_PTT_KEY=v
DEFAULT_VOLUME=80

# Logging Configuration
# Log level: TRACE, DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Console output enabled
LOG_CONSOLE=true

# File output enabled
LOG_FILE=true

# Custom log directory (defaults to ./Logs at project root)
# LOG_DIR=/custom/path/to/logs

# Max log file size before rotation (in bytes, default: 10MB)
LOG_MAX_SIZE=10485760

# Max number of log files to keep
LOG_MAX_FILES=5

# Disable colors in console output
NO_COLOR=false

# Development mode
DEV=false
